<p style = "color: red"><%= notice %></p>
<%= form_with(model: @user, local: true) do |f| %>

<div>
  <%= f.label :username %><br/>
  <%= f.text_field :username %>
</div>

<div>
  <%= f.label :email %><br/>
  <%= f.email_field :email%>
</div>

<div >
  <%= f.label :password %><br/>
  <%= f.password_field :password %>
</div>

<div >
  <%= f.submit %>
</div>

<% end %>
