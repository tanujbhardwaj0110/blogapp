<%= form_with(model: @user, local: true) do |f| %>

<div>
  <%= f.label :username %><br/>
  <%= f.text_field :username %>
</div>

<div>
  <%= f.label :email %><br/>
  <%= f.email_field :email%>
</div>

<div >
  <%= f.label :password %><br/>
  <%= f.password_field :password %>
</div>
 <% if @error_messages %>
    <div id="error_explanation">
      <h2><%= pluralize(@error_messages.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @error_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div >
  <%= f.submit %>
</div>

<% end %>
